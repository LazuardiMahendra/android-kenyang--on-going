<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/iv_detail_foto_resep"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Food Name"
        android:id="@+id/tv_detail_food"
        android:textSize="35dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="17dp"
        android:text="Lazu Or Die"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:id="@+id/tv_detail_user"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Material"
        android:textSize="28dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_detail_bahan"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Material"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/tv_detail_bahan_isi"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Alat"
        android:textSize="28dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_detail_alat"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="isi alat"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/tv_detail_alat_isi"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Langkah"
            android:textSize="28dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_detail_langkah"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="isi langkah"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/tv_detail_langkah_isi"/>

    </LinearLayout>
</ScrollView>