<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_FotoResep"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/edittextstyle" />

        <TextView
            android:id="@+id/tv_NamaResep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_FotoResep"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:text="Nama Resep"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_CaptionResep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_NamaResep"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="Masakan yang dibuat pada era dinasti tong"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tv_Like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"
            android:layout_below="@id/tv_CaptionResep"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_LikeCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_CaptionResep"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/tv_Like"
            android:text="0"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_limit1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/tv_Like"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittextstyle2" />

    </RelativeLayout>



</ScrollView>